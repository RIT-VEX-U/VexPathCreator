<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="pane" fx:controller="edu.rit.vexu.pathcreator.FieldConfig" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1">
    <center>
        <VBox spacing="10.0">
            <HBox spacing="10.0">
                <Label text="Field Image:"/>
                <TextField fx:id="imagePathField" HBox.hgrow="ALWAYS"/>
                <Button fx:id="imageChoosePathBtn" text="..."/>
            </HBox>
            <HBox spacing="10.0">
                <Label text="Length:"/>
                <Region HBox.hgrow="ALWAYS"/>
                <TextField fx:id="fieldLengthField" prefWidth="50" HBox.hgrow="NEVER"/>
                <Label text="in" />
            </HBox>
            <HBox spacing="10.0">
                <Label text="Width:"/>
                <Region HBox.hgrow="ALWAYS"/>
                <TextField fx:id="fieldWidthField" prefWidth="50" HBox.hgrow="NEVER"/>
                <Label text="in" />
            </HBox>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="BOTTOM_RIGHT" spacing="10.0">
            <Button fx:id="cancelBtn" text="Cancel"/>
            <Button fx:id="finishBtn" text="Finish"/>
            <opaqueInsets>
                <Insets/>
            </opaqueInsets>
            <padding>
                <Insets top="10.0"/>
            </padding>
        </HBox>
    </bottom>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</BorderPane>
